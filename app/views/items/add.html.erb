<div>
  <div>
    <h1>
      Create a new listing
    </h1>
  </div>
</div>

<hr>

<div>
  <div>

    <form action="/create_listing" method="post" enctype="multipart/form-data">
      <div>
        <label for="category">
          <b>Category:</b>
        </label>
        <select id="category" name="category">
          <% Category.order({ :name => :asc }).each do |a_category| %>
            <option value="<%= a_category.category %>">
              <%= a_category.category %>
            </option>
          <% end %>
        </select>
      </div>

      <div>
        <label for="name">
          <b>Name:</b>
        </label>

        <input type="text" id="name" name="name">
      </div>

      <div>
        <label for="description">
          <b>Item description:</b>
        </label>

        <input type="text" id="description" name="description">
      </div>

      <div>
        <label for="Price">
          <b>Selling price:</b> $
        </label>

        <input type="text" id="price" name="price">
      </div>

      <div>
        <label for="picture_1">
          <b>Upload listing cover picture:</b>
        </label>

        <input type="file" id="picture_1" name="picture_1">
      </div>

      <div>
        <label for="picture_2">
          <b>Upload picture 2:</b>
        </label>

        <input type="file" id="picture_2" name="picture_2">
      </div>

      <div>
        <label for="picture_3">
          <b>Upload picture 3:</b>
        </label>

        <input type="file" id="picture_3" name="picture_3">
      </div>

      <div>
        <label for="picture_4">
          <b>Upload picture 4:</b>
        </label>

        <input type="file" id="picture_4" name="picture_4">
      </div>

      <div>
        <label for="picture_5">
          <b>Upload picture 5:</b>
        </label>

        <input type="file" id="picture_5" name="picture_5">
      </div>

      <div>
        <label for="payment_method">
          <b>Payment method:</b>
        </label>

        <input type="text" id="payment_method" name="payment_method">
      </div>

      <div>
        <label for="delivery_method">
          <b>Delivery method:</b>
        </label>

        <input type="text" id="delivery_method" name="delivery_method">
      </div>

      <button>
        <b>Create new listing</b>
      </button>
    </form>

  </div>
</div>
