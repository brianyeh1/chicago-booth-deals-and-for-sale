<div class="main-container">
<div>
  <div class="header">
    <h1>
      Create a new listing
    </h1>
  </div>
</div>

<hr>

<% if current_user != nil %>

<div>
  <div>

    <form class="form-grid" action="/create_listing" method="post" enctype="multipart/form-data">


        <label for="category">
          </span><b>Category:</b>   <small class="text-danger"><i>(Required)</i></small>
        </label>
        <select id="category" name="category">
          <% Category.order({ :category => :asc }).each do |a_category| %>
            <option value="<%= a_category.category %>">
              <%= a_category.category %>
            </option>
          <% end %>
        </select>



        <label for="name">
          <b>Item:</b>   <small class="text-danger"><i>(Required)</i></small>
        </label>

        <input type="text" id="name" name="name">



        <label for="description">
          <b>Item description:</b>
        </label>

        <textarea id="description" name="description" cols="50" rows="5"></textarea>



        <label for="Price">
          <b>Selling price:</b>   <small class="text-danger"><i>(Required)</i></small>
        </label>

        <input type="text" id="price" name="price">



        <label for="picture_1">
          <b>Upload listing cover picture:</b>
        </label>

        <input type="file" id="picture_1" name="picture_1">



        <label for="picture_2">
          <b>Upload picture 2:</b>
        </label>

        <input type="file" id="picture_2" name="picture_2">



        <label for="picture_3">
          <b>Upload picture 3:</b>
        </label>

        <input type="file" id="picture_3" name="picture_3">



        <label for="picture_4">
          <b>Upload picture 4:</b>
        </label>

        <input type="file" id="picture_4" name="picture_4">



        <label for="picture_5">
          <b>Upload picture 5:</b>
        </label>

        <input type="file" id="picture_5" name="picture_5">



        <label for="payment_method">
          <b>Payment method:</b>
        </label>

        <input type="text" id="payment_method" name="payment_method">



        <label for="delivery_method">
          <b>Delivery method:</b>
        </label>

        <input type="text" id="delivery_method" name="delivery_method">


      <button>
        <b>Create new listing</b>
      </button>
    </form>

  </div>
</div>

<% else %>

<div> Please <a href="/users/sign_in/">sign in</a> to create a new listing.</div>

<% end %>

</div>
