<div>
  <div>
    <h1>
      All listings
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      <a href="/new_listing"> Create a new listing </a>
    </h2>

    <form action="/insert_board" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Add listing
      </button>
    </form>

  </div>
</div>

<hr>

<table border="1">
  <tr>
    <th>
      Category
    </th>

    <th>
      Item
    </th>

    <th>
    </th>

    <th>
      Price
    </th>

    <td>
    Last updated
    </td>

  </tr>

<% @list_of_items.each do |a_item| %>

<tr>
      <td>
        <%= a_item.category %>
      </td>
      
      <td>
        <%= a_item.name %>
      </td>

      <td>
        <img src="<%= a_item.picture_1 %>" height="300px">
      </td>

      <td>
        <%= a_item.price.to_fs(:currency) %>
      </td>

      <td>
        <%= a_item.updated_at.strftime("%b %d, %l:%M%p") %>
      </td>

    </tr>
  <% end %>
</table>
